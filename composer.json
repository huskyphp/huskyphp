{
    "require":
    {
        "slim/slim": "^3.0",
        "twig/twig": "~2.0",
        "illuminate/database": "^5.5",
        "vlucas/phpdotenv": "^2.4",
        "robmorgan/phinx": "^0.9.2",
        "symfony/console": "^3.4"
    },
    "autoload" :
    {
        "psr-4" :
        {
            "App\\Controller\\" : "app/controllers",
            "App\\Model\\" : "app/models",
            "Database\\" : "database",
            "Console\\": "bootstrap/cli"
        },
        "classmap": ["bootstrap/cli"]
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.sample', '.env');\""
        ]
    }
}
